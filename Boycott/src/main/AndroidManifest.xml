<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ignite.buycott"
    android:versionCode="14"
    android:versionName="1.0.14-alpha">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ignite.boycott.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ignite.boycott.MakerDetailActivity"
            android:label="@string/title_maker_detail"
            android:parentActivityName="com.ignite.boycott.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ignite.boycott.MainActivity" />
        </activity>
        <activity
            android:name="com.ignite.boycott.MakerNotFoundActivity"
            android:label="@string/title_maker_not_found"
            android:parentActivityName="com.ignite.boycott.MakerNotFoundActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ignite.boycott.MainActivity" />
        </activity>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="ac0a316a616e8e302410ac8567057c376d4cc9e3"/>
    </application>

</manifest>
