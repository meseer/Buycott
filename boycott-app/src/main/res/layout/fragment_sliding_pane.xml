<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SlidingPaneLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/maker_list_sliding"
                   tools:context="com.ignite.boycott.ui.SlidingPaneFragment">

    <fragment android:id="@+id/category_list"
              android:name="com.ignite.boycott.ui.CategoryFragment"
              android:layout_width="150dp"
              android:layout_height="match_parent"
              android:layout_gravity="left"/>

    <fragment android:id="@+id/maker_list"
              android:name="com.ignite.boycott.ui.MakerListFragment"
              android:layout_width="350dp"
              android:layout_height="match_parent"
              android:layout_gravity="right"
              android:layout_weight="1" />


</android.support.v4.widget.SlidingPaneLayout>